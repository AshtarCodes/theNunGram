  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet"> 
  
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <title>Add Post</title>
  
  <!-- Fontawesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />

  <!-- Public CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/addPost/style.css" />
  <!-- <link rel="stylesheet" href="\css\post\post-style.css"> --> 
  </head>
  <body>

    <% { %>
    <div class='header'>
      <h2>This is <%= user.firstName%>'s Profile</h2>
        <p>This is my bio: <%= user.bio%></p>
        <section class="profile-pic">
          <img src='<%= user.image%>'>
          <h4>Profile Pic</h4> 
        </section>
    </div>

    
    <div class="posts">
        <p>Here are my posts:</p>
        <ul class="row list-unstyled">
            <% for(let i=0; i < post.length; i++) {%>
                <p> <%= post[i].caption %> </p>
                <a href="/post/<%= post[i]._id%>">
                  <img class="img-fluid" src="<%= post[i].image%>">
                </a>
            <% } %> 
    </div>  
    <% } %>   

    <!-- Nav Bar -->
    <section>
      <div
      class="w-auto md:w-1/6 bg-gray-900 md:bg-gray-900 px-2 text-center fixed bottom-0 md:pt-8 md:top-0 md:left-0 h-16 md:h-screen md:border-r-4 md:border-gray-600">
      <div class="md:relative mx-auto lg:float-right lg:px-6">
        <ul class="list-reset flex flex-row md:flex-col text-center md:text-left">
          <li class="mr-3 flex-1">
            <a href="#"
              class="block py-1 md:py-3 pl-1 align-middle text-gray-800 no-underline hover:text-pink-500 border-b-2 border-gray-800 md:border-gray-900 hover:border-pink-500">
              <i class="fas fa-arrow-circle-up pr-0 md:pr-3"></i><span
                class="pb-1 md:pb-0 text-xs md:text-base text-gray-600 md:text-gray-400 block md:inline-block">Top of Page</span>
            </a>
          </li>
          <li class="mr-3 flex-1">
            <a href="/profile"
              class="block py-1 md:py-3 pl-1 align-middle text-gray-800 no-underline hover:text-pink-500 border-b-2 border-gray-800 md:border-gray-900 hover:border-pink-500">
              <i class="fas fa-link pr-0 md:pr-3"></i><span
                class="pb-1 md:pb-0 text-xs md:text-base text-gray-600 md:text-gray-400 block md:inline-block">Submit Post</span>
            </a>
          </li>
          <li class="mr-3 flex-1">
            <a href="/quotes/addQuote"
              class="block py-1 md:py-3 pl-1 align-middle text-gray-800 no-underline hover:text-pink-500 border-b-2 border-gray-800 md:border-gray-900 hover:border-pink-500">
              <i class="fas fa-quote-right pr-0 md:pr-3"></i><span
                class="pb-1 md:pb-0 text-xs md:text-base text-gray-600 md:text-gray-400 block md:inline-block">Submit Leon Quote</span>
            </a>
          </li>
          <li class="mr-3 flex-1">
            <a href="/post/randomPost"
              class="block py-1 md:py-3 pl-1 align-middle text-gray-800 no-underline hover:text-pink-500 border-b-2 border-gray-800 md:border-gray-900 hover:border-pink-500">
              <i class="fas fa-magic pr-0 md:pr-3"></i><span
                class="pb-1 md:pb-0 text-xs md:text-base text-gray-600 md:text-gray-400 block md:inline-block">Random Post Automagic</span>
            </a>
          </li>
          <li class="mr-3 flex-1">
            <a href="/profile"
              class="block py-1 md:py-3 pl-1 align-middle text-gray-800 no-underline hover:text-pink-500 border-b-2 border-gray-800 md:border-gray-900 hover:border-pink-500">
              <i class="fas fa-id-badge pr-0 md:pr-3"></i><span
                class="pb-1 md:pb-0 text-xs md:text-base text-gray-600 md:text-gray-400 block md:inline-block">Profile</span>
            </a>
          </li>
          <li class="mr-3 flex-1">
            <a href="/info"
              class="block py-1 md:py-3 pl-1 align-middle text-gray-800 no-underline hover:text-pink-500 border-b-2 border-gray-800 md:border-gray-900 hover:border-pink-500">
              <i class="fas fa-code pr-0 md:pr-3"></i><span
                class="pb-1 md:pb-0 text-xs md:text-base text-gray-600 md:text-gray-400 block md:inline-block">LEARN TO CODE!</span>
            </a>
          </li>
          <li class="mr-3 flex-1">
            <a href="/auth/logout"
              class="block py-1 md:py-3 pl-1 align-middle text-gray-800 no-underline hover:text-pink-500 border-b-2 border-gray-800 md:border-gray-900 hover:border-pink-500">
              <i class="fas fa-sign-out-alt pr-0 md:pr-3"></i><span
                class="pb-1 md:pb-0 text-xs md:text-base text-gray-600 md:text-gray-400 block md:inline-block">Logout</span>
            </a>
          </li>
        </ul>
      </div>
    </section>
  


  </body>
</html>