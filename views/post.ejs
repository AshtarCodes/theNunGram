  <body>
         <!--Sidebar-->
         <section class="sidebar">
          <i class="fas fa-arrow-circle-up"></i>
          <a href="/feed">Back to Feed</a>
          <i class="fas fa-link"></i>
          <a href="/profile">Submit Post</a>
          <!-- <i class="fas fa-quote-right"></i>
          <a href="/quotes/addQuote">Submit Leon Quote</a> -->
          <i class="fas fa-magic"></i>
          <a href="/post/randomPost">Random Post Automagic</a>
          <i class="fas fa-id-badge"></i>
          <a href="/profile">Profile</a>
          <i class="fas fa-sign-out-alt"></i>
          <a href="/auth/logout">Logout</a>
    
        </section>
    <!-- Renders a single Post -->
<main>
      <h1 class='caption'><%= post.caption %></h1>
      <span class='author'>Author: <%= post.author%> </span>
      <% if(post.clip != '') {%>
        <div class="new-post">
            <iframe src='<%= post.clip %>'></iframe>
            </div>
              <% } else { %>
                <div>
              <img src='<%= post.image%>'/>
            </div>
              <% } %>
        </div>
        <% if(JSON.stringify(user._id ) === JSON.stringify(post.user)) {%>

          <form name='bunny'
          action="/post/<%= post._id %>/deletePost?_method=DELETE"
          method="POST"
          class="delete-post"
          >
          <button class="fa fa-trash" type='submit'></button>
        </form>
        <% } %>
          <div class="post-container">
            <section class="num-likes">
            <% if (post.likes) { %>
                <span><%= post.likes %></span><span> LIKES</span>
            <% } %>
          </section>
            <form action="/post/<%= post._id %>/addLike?_method=PUT" method='POST'>
              <button type="submit">
              <img style='width: 40px' src='/imgs/nun.png'/></button>
          </a></form>
          </div>

      </section>
    </main>
        <!-- Iframe is causing page to break so nothing will show below it. Twitch allows you to directly src twitch clips SEE README -->
      <script type='text/javascript' src="js/main.js"></script>
  </body>
